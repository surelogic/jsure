<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE package SYSTEM "promises.dtd">

<package name="java.awt">
    <class name="FontMetrics">
    <promise keyword="colorImport" contents="java.awt.*;"/>
    <promise keyword="promise"
      contents="&quot;reads Instance, java.awt.event.ActionListener.GUIstuff, java.awt.event.ActionListener.GUIinternal&quot; for get*()"/>

    <promise keyword="promise"
    	contents="&quot;colorConstraint GUI;&quot; for charWidth*(**) | get*(**)"/>      

        <method name="stringWidth" params="java.lang.String">
            <promise keyword="colorConstraint" contents="GUI;"/>
            <promise keyword="reads" contents="Instance, arg0.Instance, java.awt.event.ActionListener.GUIinternal"/>
        </method>
        <method name="getHeight" params="">
            <promise keyword="colorConstraint" contents="GUI;"/>
        </method>
        <method name="getAscent" params="">
            <promise keyword="colorConstraint" contents="GUI;"/>
        </method>
    </class>
</package>
