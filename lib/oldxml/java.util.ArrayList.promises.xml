<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE package SYSTEM "promises.dtd">

<package name="java.util">
    <class name="ArrayList">
        <promise keyword="promise"
	  contents="&quot;transparent&quot; for **(**)"/>

        <constructor>
            <promise keyword="borrowed" contents="this"/>
            <promise keyword="transparent" />
        </constructor>
        
        <constructor params="int">
            <promise keyword="borrowed" contents="this"/>
            <promise keyword="transparent" />
        </constructor>

        <constructor params="java.util.Collection">
            <promise keyword="borrowed" contents="this"/>
            <promise keyword="transparent" />
        </constructor>

        <method name="toArray" params="java.lang.Object[]">
          <promise keyword="borrowed" contents="this"/>
          <promise keyword="reads" contents="this.Instance"/>
          <promise keyword="writes" contents="arg0.[]"/>
        </method>

        <method name="addAll" params="java.util.Collection">
          <promise keyword="borrowed" contents="this, arg0"/>
          <promise keyword="writes" contents="Instance"/>
          <promise keyword="reads" contents="arg0.Instance"/>
        </method>

        <method name="get" params="int">
          <promise keyword="borrowed" contents="this"/>
          <promise keyword="reads" contents="Instance"/>
        </method>

        <method name="add" params="java.lang.Object">
          <promise keyword="borrowed" contents="this"/>
          <promise keyword="writes" contents="Instance"/>
        </method>

        <method name="contains" params="java.lang.Object">
          <promise keyword="borrowed" contents="this"/>
          <promise keyword="reads" contents="Instance"/>
        </method>

        <method name="remove" params="int">
          <promise keyword="borrowed" contents="this"/>
          <promise keyword="writes" contents="Instance"/>
        </method>

        <method name="remove" params="java.lang.Object">
          <promise keyword="borrowed" contents="this"/>
          <promise keyword="writes" contents="Instance"/>
        </method>

        <method name="size" params="">
          <promise keyword="borrowed" contents="this"/>
          <promise keyword="reads" contents="Instance"/>
        </method>

        <method name="toArray" params="">
          <promise keyword="borrowed" contents="this"/>
          <promise keyword="reads" contents="Instance"/>
        </method>
    </class>  
</package>
