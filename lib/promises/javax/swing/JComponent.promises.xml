<package name="javax.swing">
	<class name="JComponent">

		<ThreadRoleImport>java.awt</ThreadRoleImport>

		<Promise>@ThreadRole(AWT) for process*(**)</Promise>

		<Promise>@ThreadRole(AWT) for updateUI()</Promise>
		<Promise>@ThreadRoleTransparent for revalidate()</Promise>

		<Promise>@ThreadRoleTransparent for repaint(**)</Promise>

		<Promise>@ThreadRole(AWT) for fire*(**)</Promise>


		<Promise>@ThreadRole(AWT) for requestFocus*(**) |
			requestDefaultFocus(**)</Promise>


		<Promise>@ThreadRole(AWT) for paint*(**)</Promise>

		<method name="setDoubleBuffered" params="boolean">
			<starts>nothing</starts>
			<borrowed>this</borrowed>
			<RegionEffects>writes this:Instance</RegionEffects>
		</method>

		<method name="setOpaque" params="boolean">
			<borrowed>this</borrowed>
		</method>
	</class>
</package>
