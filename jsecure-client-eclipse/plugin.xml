<?eclipse version="3.0"?>
<plugin>
  <extension point="org.eclipse.ui.viewActions">    
    <viewContribution id="com.surelogic.jsure.views.debug.viewContributions.ResultsView"
      targetID="com.surelogic.jsure.client.eclipse.views.status.VerificationStatusView">
      <action id="com.surelogic.jsure.views.debug.runJSecure"
        label="Run JSecure"
        menubarPath="additions"
        class="com.surelogic.jsecure.client.eclipse.RunJSecure">
      </action>
    </viewContribution>  
  </extension>   
	<extension point="org.eclipse.ui.views">
		<category name="JSecure" id="com.surelogic.jsecure.JSecure">
		</category>
		<!-- UI for entering ad hoc queries -->
		<view allowMultiple="false" category="com.surelogic.jsecure.JSecure"
			class="com.surelogic.jsecure.client.eclipse.views.adhoc.QueryEditorView"
			icon="platform:/plugin/com.surelogic.common/lib/images/query.gif"
			id="com.surelogic.jsecure.client.eclipse.views.adhoc.QueryEditorView"
			name="Query Editor">
		</view>
		<view allowMultiple="false" category="com.surelogic.jsecure.JSecure"
			class="com.surelogic.jsecure.client.eclipse.views.adhoc.QueryResultExplorerView"
			icon="platform:/plugin/com.surelogic.common/lib/images/drum_explorer.gif"
			id="com.surelogic.jsecure.client.eclipse.views.adhoc.QueryResultExplorerView"
			name="Query Results Explorer">
		</view>
		<view allowMultiple="false" category="com.surelogic.jsecure.JSecure"
			class="com.surelogic.jsecure.client.eclipse.views.adhoc.QueryResultsView"
			icon="platform:/plugin/com.surelogic.common/lib/images/drum.gif"
			id="com.surelogic.jsecure.client.eclipse.views.adhoc.QueryResultsView"
			name="Query Results">
		</view>
		<view allowMultiple="false" category="com.surelogic.jsecure.JSecure"
			class="com.surelogic.jsecure.client.eclipse.views.adhoc.QuerydocView"
			icon="platform:/plugin/com.surelogic.common/lib/images/doc.gif"
			id="com.surelogic.jsecure.client.eclipse.views.adhoc.QuerydocView"
			name="Querydoc">
		</view>	
    </extension>			

	<!-- JSecure perspective links and Java perspective links -->

	<extension point="org.eclipse.ui.perspectives">
		<perspective name="JSecure"
			class="com.surelogic.jsecure.client.eclipse.perspectives.JSecurePerspective"
			id="com.surelogic.jsecure.client.eclipse.perspectives.JSecurePerspective">
			<!--icon="platform:/plugin/com.surelogic.common/lib/images/jsure_logo.gif"-->			
		</perspective>
	</extension>

	<extension point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension
			targetID="com.surelogic.jsecure.client.eclipse.perspectives.JSecurePerspective">
			<perspectiveShortcut id="org.eclipse.jdt.ui.JavaPerspective">
			</perspectiveShortcut>
		</perspectiveExtension>
	</extension>

	<extension point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension targetID="org.eclipse.jdt.ui.JavaPerspective">
			<perspectiveShortcut
				id="com.surelogic.jsecure.client.eclipse.perspectives.JSecurePerspective">
			</perspectiveShortcut>
		</perspectiveExtension>
	</extension>
	
	<extension point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension
			targetID="com.surelogic.jsecure.client.eclipse.perspectives.JSecurePerspective">
			<perspectiveShortcut id="org.eclipse.jdt.ui.JavaPerspective">
			</perspectiveShortcut>
			<viewShortcut
				id="com.surelogic.jsecure.client.eclipse.views.adhoc.QueryEditorView">
			</viewShortcut>
			<viewShortcut
				id="com.surelogic.jsecure.client.eclipse.views.adhoc.QueryResultsView">
			</viewShortcut>
			<viewShortcut
				id="com.surelogic.jsecure.client.eclipse.views.adhoc.QuerydocView">
			</viewShortcut>
		</perspectiveExtension>
	</extension>	
</plugin>
